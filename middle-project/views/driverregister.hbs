<div class="panel panel-primary center-block" style="text-align: center; width: 50%">
  <div class="panel-heading" style="text-align: left">
    <h3 class="panel-title">Register</h3>
  </div>
  <div class="panel-body">
    <form id="driverRegisterForm" method="post">
      <div class="">
        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg"
             alt="" width="72" height="72">
        <div class="row">
          <div class="col-sm-6">
            <label for="driver_first_name" class="sr-only">First Name</label>
            <input id="driver_first_name" name="driver_first_name" class="form-control"
                   style="margin-bottom: 10px" placeholder="First Name" required="" autofocus="">
          </div>
          <div class="col-sm-6">
            <label for="driver_last_name" class="sr-only">Last Name</label>
            <input id="driver_last_name" name="driver_last_name" class="form-control" style="margin-bottom: 10px"
                   placeholder="Last Name" required="" autofocus="">
          </div>
        </div>
        <label for="driver_username" class="sr-only">Username</label>
        <input id="driver_username" name="driver_username" class="form-control" style="margin-bottom: 10px"
               placeholder="Username" required="" autofocus="">
        <label for="driver_phone" class="sr-only">Phone Number</label>
        <input id="driver_phone" name="driver_phone" class="form-control" style="margin-bottom: 10px"
               placeholder="Phone" required="" autofocus="">
        <label for="driver_password" class="sr-only">Password</label>
        <input id="driver_password" name="driver_password" class="form-control" style="margin-bottom: 10px"
               placeholder="Password" required="" type="password">
        <label for="driver_password2" class="sr-only">Confirm Password</label>
        <input id="driver_password2" name="driver_password2" class="form-control" placeholder="Confirm Password"
               required="" type="password">
        <br>
        <div>
          <button id="driver_register" class="btn btn-lg btn-primary btn-block">Register</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script type="text/javascript" src="/javascripts/driverjs.js"></script>

