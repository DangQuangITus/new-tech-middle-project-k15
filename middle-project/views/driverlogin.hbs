<div class="panel panel-primary center-block" style="text-align: center; width: 50%">
  <div class="panel-heading" style="text-align: left">
    <h3 class="panel-title">Register</h3>
  </div>
  <div class="panel-body">
    <form id="driverRegisterForm" method="post">
      <div class="">
        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg"
             alt="" width="72" height="72">
        <div class="row">
          <div class="col-sm-6">
            <label for="first_name" class="sr-only">First Name</label>
            <input id="first_name" name="first_name" class="form-control"
                   style="margin-bottom: 10px" placeholder="First Name" required="" autofocus="">
          </div>
          <div class="col-sm-6">
            <label for="last_name" class="sr-only">Last Name</label>
            <input id="last_name" name="last_name" class="form-control" style="margin-bottom: 10px"
                   placeholder="Last Name" required="" autofocus="">
          </div>
        </div>
        <label for="username" class="sr-only">Username</label>
        <input id="username" name="username" class="form-control" style="margin-bottom: 10px"
               placeholder="Username" required="" autofocus="">
        <label for="phone" class="sr-only">Phone Number</label>
        <input id="phone" name="phone" class="form-control" style="margin-bottom: 10px"
               placeholder="Phone" required="" autofocus="">
        <label for="password1" class="sr-only">Password</label>
        <input id="password1" name="password1" class="form-control" style="margin-bottom: 10px"
               placeholder="Password" required="" type="password">
        <label for="password2" class="sr-only">Confirm Password</label>
        <input id="password2" name="password2" class="form-control" placeholder="Confirm Password"
               required="" type="password">
        <br>
        <div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script type="text/javascript" src="../public/javascripts/driverjs.js"></script>

