<div class="container">

    <div class="row">


        <div class="panel panel-primary center-block" style="text-align: center; width: 50%">
            <div class="panel-heading" style="text-align: left">
                <h3 class="panel-title">Add More Admin</h3>
            </div>
            <div class="panel-body">
                <form id="add-admin-form" method="post">
                    <div class="">
                        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72"
                            height="72">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="admin_first_name" class="sr-only">First Name</label>
                                <input id="admin_first_name" name="admin_first_name" class="form-control" style="margin-bottom: 10px"
                                    placeholder="First Name" required="" autofocus="">
                            </div>
                            <div class="col-sm-6">
                                <label for="admin_last_name" class="sr-only">Last Name</label>
                                <input id="admin_last_name" name="admin_last_name" class="form-control" style="margin-bottom: 10px"
                                    placeholder="Last Name" required="" autofocus="">
                            </div>
                        </div>
                        <label for="admin_username" class="sr-only">Username</label>
                        <input id="admin_username" name="admin_username" class="form-control" style="margin-bottom: 10px"
                            placeholder="Username" required="" autofocus="">
                        <label for="admin_phone" class="sr-only">Phone Number</label>
                        <input id="admin_phone" name="admin_phone" class="form-control" style="margin-bottom: 10px"
                            placeholder="Phone" required="" autofocus="">
                        <label for="admin_password" class="sr-only">Password</label>
                        <input id="admin_password" name="admin_password" class="form-control" style="margin-bottom: 10px"
                            placeholder="Password" required="" type="password">
                        <label for="admin_password2" class="sr-only">Confirm Password</label>
                        <input id="admin_password2" name="admin_password2" class="form-control" placeholder="Confirm Password"
                            required="" type="password">
                        <br>
                        <div>
                            <button id="add_admin" class="btn btn-lg btn-primary btn-block">add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="/javascripts/driverjs.js"></script>